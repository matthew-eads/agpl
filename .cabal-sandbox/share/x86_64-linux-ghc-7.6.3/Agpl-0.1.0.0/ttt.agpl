TicTacToe: Game

Gamestate: {
           Board: {Matrix}
           Piece: {X | O | Nil}
}

Player: {PX | PO}

--Type Coord: {Coord (Int, Int)}
--Move: {Move (Coord)}

Move: {(Int, Int)}
isValid: { (\(Move (i, j)) -> ((i < 3) && (j < 3) &&
                         (i >= 0) && (j >= 0) && ((board game) ! (i,j)) == Nil))}


possMoves: {mfold (\((i, j), piece, acc) -> if piece == Nil then (Move(i, j):acc)
                                                        else acc) [] (board game)}

